# Java command to use when running NiFi
java=java

# Username to use when running NiFi. This value will be ignored on Windows.
run.as=

# Configure where NiFi's lib and conf directories live
lib.dir=<%= scope.lookupvar('nifi::install_dir') %>/lib
conf.dir=<%= scope.lookupvar('nifi::config_dir') %>

<% scope.lookupvar('nifi::bootstrap').map do |key, value| -%>
<%= key -%>=<%= value %>
<% end -%>

# XML File that contains the definitions of the notification services
notification.services.file=<%= scope.lookupvar('nifi::config_dir') %>/bootstrap-notification-services.xml

